  }
  
  int_ = f;
  f -= int_;
  count += digit_length_base(int_, 10);
  if (f == 0)
    return (count);

  count++; // We add one because of the dot . or ,
  while (f) {
    f *= 10;
    printf("Current: %.12f means %s %i \n", f, (f == (double)0.0f) ? "true should return. number is %i" : "NOT YET.!", count);
    int_ = f;
    f -= int_;
    if (!f)
      break;
    count++;
  } 
